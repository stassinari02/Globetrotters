<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photoCard"
    android:layout_width="@dimen/photo_item_dimens"
    android:layout_height="@dimen/photo_item_dimens"
    android:layout_margin="@dimen/photo_item_margin"
    app:cardCornerRadius="@dimen/photo_item_cornerRadius"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/photo_item_padding">

    <ImageView
        android:id="@+id/photoItemImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/photo_item_description"/>

</androidx.cardview.widget.CardView>
