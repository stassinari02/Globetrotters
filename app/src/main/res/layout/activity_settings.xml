<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="center"
    android:background="?android:attr/windowBackground">

    <!-- Sezione Gestione Permessi -->
    <TextView
        android:id="@+id/settings_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Impostazioni"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/permissions_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestione Permessi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <Button
        android:id="@+id/permissionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestisci Permessi"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <!-- Sezione Tema -->
    <TextView
        android:id="@+id/theme_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tema"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <!-- Sezione Switch Tema Chiaro/Scuro -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chiaro"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"
            android:textColor="?android:attr/textColorSecondary" />

        <Switch
            android:id="@+id/themeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scuro"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:textColor="?android:attr/textColorSecondary" />
    </LinearLayout>

    <!-- Sezione Versione dell'app -->
    <TextView
        android:id="@+id/version_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versione App"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:textColor="?android:attr/textColorPrimary"/>

    <TextView
        android:id="@+id/versionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0.0"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="?android:attr/textColorSecondary"/>

    <!-- Pulsante per uscire dalle impostazioni -->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esci"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
    android:background="?android:attr/colorAccent"
        android:textStyle="bold" />

</LinearLayout>
