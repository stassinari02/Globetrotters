<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Barra di ricerca -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/map_Searchbar" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/map_confirmButton_minHeight"
        android:paddingHorizontal="@dimen/map_paddingOrizzontal"
        android:textSize="@dimen/map_confirmButton_textsize"
        android:text="@string/map_confirmButton"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/map_confirmButton_marginBottom"
        android:visibility="gone"
        android:elevation="@dimen/map_confitmButton_elevation" />

    <!-- Frammento di Google Maps -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize" />

</FrameLayout>